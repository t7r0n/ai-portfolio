---
import BaseLayout from '../../layouts/BaseLayout.astro'
import Nav from '../../components/Nav.astro'
import Footer from '../../components/Footer.astro'
import { getCollection } from 'astro:content'
const items = await getCollection('publications')
---
<BaseLayout title="Publications">
  <Fragment slot="nav"><Nav /></Fragment>
  <h1 class="text-3xl font-bold mb-6">Publications</h1>
  <ul class="space-y-4">
    {items.sort((a,b)=> (b.data.year||0) - (a.data.year||0)).map(p => (
      <li class="rounded-2xl p-5 border border-black/5 dark:border-white/5">
        <h3 class="font-semibold">{p.data.title}</h3>
        <p class="text-sm text-neutral-600 dark:text-neutral-300">{p.data.authors?.join(', ')} â€” {p.data.venue} ({p.data.year})</p>
      </li>
    ))}
  </ul>
  <Fragment slot="footer"><Footer /></Fragment>
</BaseLayout>
