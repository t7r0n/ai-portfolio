---
import BaseLayout from '../../layouts/BaseLayout.astro'
import Nav from '../../components/Nav.astro'
import Footer from '../../components/Footer.astro'
import { getCollection } from 'astro:content'
const items = await getCollection('certifications')
---
<BaseLayout title="Certifications">
  <Fragment slot="nav"><Nav /></Fragment>
  <h1 class="text-3xl font-bold mb-6">Certifications</h1>
  <ul class="space-y-4">
    {items.sort((a,b)=> (b.data.issued||'').localeCompare(a.data.issued||'')).map(c => (
      <li class="rounded-2xl p-5 border border-black/5 dark:border-white/5">
        <h3 class="font-semibold">{c.data.title}</h3>
        <p class="text-sm text-neutral-600 dark:text-neutral-300">{c.data.org} â€” Issued {c.data.issued}{c.data.expires ? `, Expires ${c.data.expires}` : ''}</p>
      </li>
    ))}
  </ul>
  <Fragment slot="footer"><Footer /></Fragment>
</BaseLayout>
